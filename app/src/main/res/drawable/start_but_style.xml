<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
      <shape>

          <solid android:color="@color/colorLightGreen"></solid>
          <corners android:radius="200dp"></corners>
      </shape>


  </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="@color/colorLightGreen"
                android:endColor="@color/colorGreen"
                ></gradient>
            <solid android:color="@color/colorGreen"></solid>
            <corners android:radius="205dp"></corners>
            <stroke android:color="@color/colorGreen" android:width="1dp"></stroke>
            <padding android:bottom="2dp" android:left="12dp" android:right="12dp" android:top="2dp"></padding>
        </shape>
    </item>

</selector>